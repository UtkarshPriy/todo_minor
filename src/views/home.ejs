<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
  </script>
  <!-- <link rel="stylesheet" href="./public/home.css"> type="text/css" -->
  <link href="/home.css" rel="stylesheet">


  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To-Do</title>
</head>

<body>

  <h1>TODO APP</h1>


  <form>
    <div>
      <textarea id='txt'>
        Description
      </textarea>
    </div>

    <div class="row" ,id='row'>

      <div class="dropdown">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
          aria-expanded="false">
          Choose a category
        </a>

        <ul class="dropdown-menu">
          <li><a class="dropdown-item"name = "categary" value = "personal" href="#">personal</a></li>
          <li><a class="dropdown-item"name = "categary" value = "school" href="#">school</a></li>
          <li><a class="dropdown-item"name = "categary" value = "home" href="#">home</a></li>
          <li><a class="dropdown-item"name = "categary" value = "office" href="#">office</a></li>
        </ul>
      </div>

      <div class="col">
        <a>Due date</a>
        <!-- <label for="birthday">Birthday:</label> -->
        <input type="date" id="duedate" name="duedate">

      </div>
    </div>
    
  </form>
 <!-- Buttons -->
  <div>
    <button> + ADD </button>
    <button> - DELETE TASK </button>
  </div>


  
  <div>
    <% todos.forEach(todo => { %>
      <ul id="ul">
        <input type="radio" id="<%= todo.name %>" name="fav_language" value="<%= todo.name %>">
        <h3><%= todo.name %></h3>
        <span><%= todo.duedate %></span>
        <span><%= todo.category %></span>
      </ul>
    <% }); %>
  </div>
  


</body>

</html>