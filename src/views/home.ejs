  <link href="/home.css" rel="stylesheet">


  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To-Do</title>
</head>

<body>

  <h1>TODO APP</h1>


  <form id = "form1" action="/submit" method="post">
    <div>
      <textarea name = 'desc' id='desc'>
        Description
      </textarea>
    </div>

    <div class="row" ,id='row'> 

      <div class="dropdown">
        <!-- <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
          aria-expanded="false">
          Choose a category
        </a> -->

       

          <select name="cars" id="cars">
            <option value="" disabled selected>Select Category</option>

            <option name="categary" value="school">school</option>
            <option name="categary" value="home">home</option>
            <option name="categary" value="office">office</option>
            <option name="categary" value="other">other</option>
          </select>

          <!-- <li><input class="dropdown-item" name="categary" value="personal" href="#">personal</input></li>
          <li><a class="dropdown-item" name="categary" value="school" href="#">school</a></li>
          <li><a class="dropdown-item" name="categary" value="home" href="#">home</a></li>
          <li><a class="dropdown-item" name="categary" value="office" href="#">office</a></li> -->
        
      </div>

      <div class="col">
        <a>Due date</a>
        <input type="date" id="duedate" name="duedate">

      </div>
    </div>

  </form>
  <!-- Buttons -->
  <div id = 'btn'>
    <button id = 'addbtn' type="submit"> + ADD </button>
    <button id="removebtn" type="submit"> - DELETE TASK </button>
  </div>



  <div>
    <% todos.forEach(todo => { %>
    <ul id="ul">
      <input type="radio" id="<%= todo.name %>" name="radio" value="<%= todo.name %>">
      <h3 id='tododesc'><%= todo.desc %></h3>
      <mark id='spn1'><%= todo.duedate %></mark>
      <div>
      <h3 id='categary'><%= todo.category %></h3>

      </div>
    </ul>
    <% }); %>
  </div>



</body>
<script src ='/btn.js'></script>


</html>